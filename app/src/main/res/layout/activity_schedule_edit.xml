<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleEditActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_climbing"
            android:onClick="onMemoryButtonTapped" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_graph"
            android:onClick="onChartButtonTapped" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon_gym"
            android:onClick="onAddGymButtonTapped" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="76dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="日付け："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="76dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ジム名："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="滞在時間："
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/detailEdit"
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="2"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/GymName" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onSaveTapped"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/delete"
        android:onClick="onDeleteTapped"
        android:text="削除"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="5級："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="4級："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="3級："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="2級："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="1級："
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btnGrade5Minus"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/deletebutton"
        android:onClick="onGrade5MinusTapped"
        android:text="➖"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/grade5"
        app:layout_constraintTop_toBottomOf="@+id/detailEdit" />

    <Button
        android:id="@+id/btnGrade4Minus"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/deletebutton"
        android:onClick="onGrade4MinusTapped"
        android:text="➖"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/grade4"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade5Minus" />

    <Button
        android:id="@+id/btnGrade3Minus"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/deletebutton"
        android:onClick="onGrade3MinusTapped"
        android:text="➖"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/grade3"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade4Minus" />

    <Button
        android:id="@+id/btnGrade2Minus"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/deletebutton"
        android:onClick="onGrade2MinusTapped"
        android:text="➖"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/grade2"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade3Minus" />

    <Button
        android:id="@+id/btnGrade1Minus"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/deletebutton"
        android:onClick="onGrade1MinusTapped"
        android:text="➖"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/grade1"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade2Minus" />

    <Button
        android:id="@+id/btnGrade5Plus"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/PlusButton"
        android:elevation="0dp"
        android:onClick="onGrade5PlusTapped"
        android:text="➕"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/btnGrade5Minus"
        app:layout_constraintTop_toBottomOf="@+id/detailEdit" />

    <Button
        android:id="@+id/btnGrade4Plus"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PlusButton"
        android:elevation="0dp"
        android:onClick="onGrade4PlusTapped"
        android:text="➕"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnGrade4Minus"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade5Plus" />

    <Button
        android:id="@+id/btnGrade3Plus"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PlusButton"
        android:elevation="0dp"
        android:onClick="onGrade3PlusTapped"
        android:text="➕"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/btnGrade3Minus"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade4Plus" />

    <Button
        android:id="@+id/btnGrade2Plus"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PlusButton"
        android:elevation="0dp"
        android:onClick="onGrade2PlusTapped"
        android:text="➕"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/btnGrade2Minus"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade3Plus" />

    <Button
        android:id="@+id/btnGrade1Plus"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/PlusButton"
        android:elevation="0dp"
        android:onClick="onGrade1PlusTapped"
        android:text="➕"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/btnGrade1Minus"
        app:layout_constraintTop_toBottomOf="@+id/btnGrade2Plus" />

    <EditText
        android:id="@+id/grade5"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/detailEdit" />

    <EditText
        android:id="@+id/grade4"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/grade5" />

    <EditText
        android:id="@+id/grade3"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/grade4" />

    <EditText
        android:id="@+id/grade2"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/grade3" />

    <EditText
        android:id="@+id/grade1"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/grade2" />

    <Spinner
        android:id="@+id/GymName"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/dateEdit" />

</android.support.constraint.ConstraintLayout>